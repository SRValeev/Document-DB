# Application Settings
APP_NAME="RAG Document Assistant"
VERSION="2.0.0"
DEBUG=false
TESTING=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["*"]

# Security
SECURITY_SECRET_KEY=your-super-secret-key-change-this-in-production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION_MINUTES=15

# Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=document_chunks_v2
QDRANT_VECTOR_SIZE=768
QDRANT_TIMEOUT=30

# Redis (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Document Processing
PROCESSING_CHUNK_SIZE=768
PROCESSING_CHUNK_OVERLAP=200
PROCESSING_MIN_CHUNK_SIZE=300
PROCESSING_MAX_FILE_SIZE_MB=50
PROCESSING_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
PROCESSING_SPACY_MODEL=ru_core_news_md
PROCESSING_BATCH_SIZE=32
PROCESSING_MAX_WORKERS=4
PROCESSING_DEVICE=cpu

# LLM Configuration
LLM_API_URL=http://localhost:1234/v1
LLM_MODEL=google/gemma-3-4b
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=60
LLM_RETRY_ATTEMPTS=3
LLM_CACHE_RESPONSES=true

# Monitoring and Logging
MONITORING_LOG_LEVEL=INFO
MONITORING_LOG_FORMAT=json
MONITORING_MAX_LOG_SIZE_MB=100
MONITORING_BACKUP_COUNT=5
MONITORING_METRICS_ENABLED=true
MONITORING_HEALTH_CHECK_INTERVAL=30

# File Paths
DATA_DIR=data
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
LOGS_DIR=logs
TEMP_DIR=temp

# Optional: Grafana
GRAFANA_PASSWORD=admin